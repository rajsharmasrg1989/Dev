pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                // Check out your repository from GitHub
               git url: 'https://github.com/rajsharmasrg1989/Dev.git', branch: 'main'
            }
        }
        stage('Read YAML File') {
            steps {
                script {
                    // Read the YAML file (e.g., config/settings.yaml) from the workspace
                    def config = readYaml file: '/var/lib/jenkins/workspace/gitscan/dev.yml'
                    echo "File read successfully"

                    // Access data from the YAML file
                   echo "The value of a property is: ${config.cluster}"
                 //  echo "A list item: ${config.cluster[0].name}"

                   def yamlFiles = findFiles(glob: '**/*.yaml')
                    for (int i = 0; i < yamlFiles.length; i++) {
                        def fileName = yamlFiles[i].path
                        def fileContent = readYaml file: fileName
                        println("Content of ${fileName}: ${fileContent}")
                        echo "$fileName"
                    }
                }
            }
        }
    }
}
